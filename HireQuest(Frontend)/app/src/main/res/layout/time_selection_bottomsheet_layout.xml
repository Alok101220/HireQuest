<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="50dp"
        android:layout_height="6dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_background_day"
        android:backgroundTint="@color/base_color"
        android:id="@+id/top_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        style="@style/Text"
        android:text="Select Time"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/top_view"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/monthAndDateContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/title"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/hourContainer"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager_hour"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_gravity="center_vertical"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=":"
               android:textSize="50sp"
               android:textStyle="bold"
               android:textColor="@color/base_color"
               android:alpha="3"
               android:layout_gravity="center_vertical"
               android:layout_marginBottom="10dp"/>

       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/minuteContainer"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager_minute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="@color/base_color"
            android:alpha="0.3"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/amPmContainer"
            android:layout_weight="1.4"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager_amPm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        android:text="Save"
        android:textColor="@color/white"
        android:layout_below="@+id/monthAndDateContainer"
        android:backgroundTint="@color/base_color"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:cornerRadius="16dp"
        app:elevation="10dp"
        android:elevation="10dp"
        android:shadowColor="@color/base_color"
        android:outlineSpotShadowColor="@color/base_color"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cancelButton"
        style="@style/CustomOutlinedButton"
        android:text="No, Cancel"
        android:textSize="14sp"
        android:layout_below="@+id/saveButton"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:cornerRadius="16dp"
        android:elevation="5dp"
        android:textAllCaps="true"
        android:outlineSpotShadowColor="@color/base_color"
        />
</RelativeLayout>