<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    style="@style/PageBackground">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/breaker_line"
        android:background="@color/text"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:alpha="0.5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appreciation_recyclerview_item_title"
        style="@style/Text"
        android:text="Android Development"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/breaker_line"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="19dp"
        android:layout_height="19dp"
        style="@style/IconTint"
        android:id="@+id/appreciation_recyclerview_item_link_icon"
        android:src="@drawable/icon_url"
        android:layout_below="@id/breaker_line"
        android:layout_toEndOf="@+id/appreciation_recyclerview_item_title"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/appreciation_recyclerview_item_issuedBy"
        style="@style/Text"
        android:text="Udemy"
        android:layout_below="@+id/appreciation_recyclerview_item_title"
        android:textSize="12sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appreciation_recyclerview_item_duration"
        style="@style/Text"
        android:text="2023"
        android:textSize="12sp"
        android:layout_below="@+id/appreciation_recyclerview_item_issuedBy"/>

    <ImageView
        android:layout_width="19dp"
        android:layout_height="19dp"
        style="@style/IconTint"
        android:id="@+id/appreciation_recyclerview_item_edit_icon"
        android:src="@drawable/icon_edit"
        android:layout_marginTop="10dp"
        android:layout_below="@id/breaker_line"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
</RelativeLayout>