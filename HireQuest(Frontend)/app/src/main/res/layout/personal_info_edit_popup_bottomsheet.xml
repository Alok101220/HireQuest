<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="5dp"
    style="@style/PageBackground">
    <View
        android:layout_width="50dp"
        android:layout_height="6dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_background_day"
        android:backgroundTint="@color/base_color"
        android:id="@+id/top_view"/>
    <ImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:id="@+id/cancelButton"
        android:src="@drawable/icon_close"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        style="@style/IconTint"/>
    <ImageView
        android:layout_width="34dp"
        android:layout_height="34dp"
        style="@style/ProfileIconTint"
        android:id="@+id/personal_info_saveButton"
        android:src="@drawable/ic_check"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cancelButton"
        tools:ignore="ScrollViewCount">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_edit_email_title"
                style="@style/Text"
                android:text="Email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_edit_email_edittext_container"
                android:layout_below="@+id/personal_info_edit_email_title"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"

                android:outlineSpotShadowColor="@color/base_color"
                android:outlineAmbientShadowColor="@color/base_color">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/personal_info_edit_email_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Custom"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textSize="14sp"/>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_edit_phone_number_title"
                android:text="Phone number"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/Text"
                android:layout_below="@id/personal_info_edit_email_edittext_container"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_edit_phone_number_edittext_container"
                android:layout_below="@+id/personal_info_edit_phone_number_title"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="20dp"
                android:outlineSpotShadowColor="@color/base_color"
                android:outlineAmbientShadowColor="@color/base_color">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    style="@style/CardViewBackground"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/spinner_container"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:id="@+id/code_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Text"
                            android:text="+91"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"/>

                        <ImageView
                            android:id="@+id/spinner_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_more"
                            style="@style/IconTint"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/editText_color"
                            android:layout_marginStart="5dp"
                            android:alpha="0.5"
                            />

                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/personal_info_edit_phone_number_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Custom"
                        android:layout_gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/editText_color"
                        android:textSize="14sp"
                        android:layout_toEndOf="@+id/spinner_container"
                        android:layout_centerVertical="true"
                        android:maxLength="10"
                        android:backgroundTint="@color/black1"/>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_edit_dob_title"
                android:text="Date of birth"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/Text"
                android:layout_below="@id/personal_info_edit_phone_number_edittext_container"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_edit_dob_edittext_container"
                android:layout_below="@+id/personal_info_edit_dob_title"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:outlineSpotShadowColor="@color/base_color"
                android:outlineAmbientShadowColor="@color/base_color">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/personal_info_edit_dob_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Custom"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:hint="1 Jan 1947"
                    android:textSize="14sp"
                    android:drawableEnd="@drawable/custom_calendar_icon"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_edit_gender_title"
                android:text="Gender"
                android:textSize="14sp"
                android:textStyle="bold"
                style="@style/Text"
                android:layout_below="@id/personal_info_edit_dob_edittext_container"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:id="@+id/personal_info_edit_gender_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/personal_info_edit_gender_title"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_edit_popup_gender_male_edittext_container"
                        android:layout_below="@+id/profile_edit_popup_gender_title"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="20dp"
                        android:outlineSpotShadowColor="@color/base_color"
                        android:outlineAmbientShadowColor="@color/base_color">
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/personal_info_edit_gender_male"
                            android:text="Male"
                            style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Custom"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:checked="false"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/personal_info_edit_gender_female_edittext_container"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="20dp"
                        android:outlineSpotShadowColor="@color/base_color"
                        android:outlineAmbientShadowColor="@color/base_color">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/personal_info_edit_gender_female"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Custom"
                            android:paddingStart="5dp"
                            android:text="Female"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:buttonTint="@color/white"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profile_edit_popup_gender_other_edittext_container"
                        android:layout_below="@+id/profile_edit_popup_gender_title"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="20dp"
                        android:outlineSpotShadowColor="@color/base_color"
                        android:outlineAmbientShadowColor="@color/base_color">
                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/personal_info_edit_popup_gender_other"
                            android:text="Other"
                            style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Custom"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:paddingStart="5dp"
                            app:buttonTint="@color/white"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/personal_info_edit_location_title"
                style="@style/Text"
                android:text="Location"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@id/personal_info_edit_gender_container"
                android:layout_marginStart="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_edit_popup_location_edittext_container"
                android:layout_below="@+id/personal_info_edit_location_title"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="20dp"
                android:outlineSpotShadowColor="@color/base_color"
                android:outlineAmbientShadowColor="@color/base_color">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/personal_info_edit_location_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Custom"
                    android:layout_gravity="start"
                    android:gravity="center_vertical"
                    android:hint="Pune, Maharashtra"
                    android:textColorHint="@color/not_joined"
                    android:maxLines="1"
                    android:textColor="@color/editText_color"
                    android:textSize="14sp"
                    android:drawableEnd="@drawable/icon_location"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>